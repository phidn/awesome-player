{
  "manifest_version": 3,
  "name": "Awesome Player for Local Files",
  "version": "1.0.0",
  "description": "A lightweight video player for local files with easy-to-use interface, offline support, and useful keyboard shortcuts.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Awesome Player for Local Files",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
